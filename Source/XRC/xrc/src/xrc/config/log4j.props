log4j.rootLogger=debug, xrc
log4j.appender.xrc=org.apache.log4j.ConsoleAppender

log4j.appender.xrc.layout=org.apache.log4j.PatternLayout

# Pattern to output the caller's file name and line number.
log4j.appender.xrc.layout.ConversionPattern=%5p [%t] (%F:%L): %m%n

